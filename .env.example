# A2T-Service Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# AI Models Configuration
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_LANGUAGE=de

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Audio Processing
AUDIO_UPLOAD_FOLDER=temp/uploads
AUDIO_OUTPUT_FOLDER=temp/processed
MAX_AUDIO_SIZE_MB=100

# DreamMall Integration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
DREAMMALL_BACKEND_URL=http://localhost:3000

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/a2t-service.log

# Optional: HuggingFace Token f√ºr Speaker Diarization
# Besuchen Sie: https://hf.co/pyannote/speaker-diarization
# Token erstellen: https://hf.co/settings/tokens
# HUGGINGFACE_TOKEN=your_token_here
